{
  "compilerOptions": {
    "target": "ES2020",                // 컴파일된 JavaScript의 ECMAScript 버전
    "module": "CommonJS",             // 모듈 시스템 (Node.js에서는 CommonJS 사용)
    "strict": true,                   // 엄격한 타입 검사 활성화
    "esModuleInterop": true,          // ES6 모듈 호환성
    "forceConsistentCasingInFileNames": true, // 파일명 대소문자 구분 엄격히 적용
    "skipLibCheck": true,             // 외부 라이브러리 타입 검사 생략
    "outDir": "./dist",               // 컴파일된 JavaScript 파일이 저장될 디렉토리
    "rootDir": "./src",               // TypeScript 파일의 루트 디렉토리
    "resolveJsonModule": true,        // JSON 모듈 가져오기 지원
    "declaration": true,              // 타입 선언 파일 생성 (.d.ts)
    "declarationDir": "./dist", // 타입 선언 파일 저장 경로
    "sourceMap": true,                // 디버깅을 위한 소스맵 파일 생성
    "moduleResolution": "node",       // 모듈 해석 방식
    "baseUrl": "./src",               // 모듈 경로의 기준이 되는 디렉토리
  },
  "include": [
    "src/**/*"                         // src 디렉토리 내 모든 파일 포함
  ],
  "exclude": [
    "node_modules",                    // node_modules 디렉토리 제외
    "dist"                             // dist 디렉토리 제외
  ]
}